{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "checkJs": true,
    "target": "es2021",
    "typeRoots": [
      "./declarations/express.d.ts"
    ]
  },
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "include": [
    "**/*.ts",
    "webpack.config.ts"
  ]
}